<Window x:Class="SentinelClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="300" Width="408" ResizeMode="NoResize">
    <Grid Width="400" Height="270" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="230"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>
        <Label Content="Enter Radius:"  VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0"/>
        <TextBox x:Name="txtRadius" Grid.Column="1" Grid.Row="0" Width="200" HorizontalAlignment="Right" Margin="25,0,5,0" TextWrapping="NoWrap" Text="0" VerticalAlignment="Center" TextAlignment="Right" LostFocus="txtRadius_LostFocus" />
        <TextBlock x:Name="outputBlock" Height="210" Width="380" HorizontalAlignment="Left" TextAlignment="Left"  Grid.ColumnSpan="2" Grid.Row="1" IsHyphenationEnabled="True" Focusable="True" />
    </Grid>
</Window>
